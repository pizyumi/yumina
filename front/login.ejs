<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title><%- title %></title>
  <link href="/asset/css/lib.css" rel="stylesheet">
</head>
<body>
  <script src="/asset/js/lib.js"></script>

  <form action="/login" method="post">
    <p>
      <label for="userid"><%- __('user_id') %></label>
      <input type="text" id="<%- username_field %>" class="form-control" name="userid" size="20">
    </p>
    <p>
      <label><%- __('password') %></label>
      <input type="password" id="<%- password_field %>" class="form-control" name="password" size="20">
    </p>
    <p>
      <button type="submit" class="btn btn-primary" name="login" value="login"><%- __('login') %></button>
    </p>
    <% for (var i = 0; i < errors.length; i++) { -%>
      <p class="text-danger"><%- errors[i] %></p>
    <% } -%>
  </form>
</body>
</html>
